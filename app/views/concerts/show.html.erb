<% provide(:title, @concert.shortname) %>
  <div class="title-row">
    <div class="row">
      <div class="span6">
         <h3><%=@concert.head%></h3>
      </div>
      <div class="span6">
        <p class="lead"><%=@concert.subhead%></p>
      </div>
    </div>
  </div>
  <div class="main-row">
    <div class="row">
      <div class="span6">
        <ul class="thumbnails">
          <li class="span6">
            <% unless @concert.id == 4 %>
              <%= image_tag "570/#{@concert.id}.jpg" %>
            <% end %>
            <% if @concert.id == 2%>
              </br>
              <%=image_tag "GECA.jpg"%>
            <% end %>
          </li>
        </ul>
        <div class="music">
            <ul class="">
              <% @concert.playlist.each do |composition| %>
              <li>
                <%=composition%>
              </li>
              <%end%>
            </ul>
          </div>
      </div>
      <div class="span6">
        <% unless @concert.id == 4 %>
          <p align="justify"><%=@concert.description%></p>
        <% end %>
      	<%= render :partial => "artist", :collection => @artists %>
      </div>
    </div>
  </div>


