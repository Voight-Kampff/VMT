<% if seat.nil?%>
	<% current_seat=""%>
<% elsif (seat.id % 25)==0%>
	<% current_seat=25%>
<% else %>
	<% current_seat= (seat.id%25) %>
<%end %>

<% if @reservation.nil? %>
	<% @reservation=Reservation.new %>
<% end %>
<%= form_for(@reservation, remote: true ) do |f| %>
	<%= f.hidden_field :seat_id, :class => "seat_id"%>
	<%= f.submit "#{current_seat}", class: "btn btn-mini",id:"button", onclick: "getdiv(this)" %>
<%end%>